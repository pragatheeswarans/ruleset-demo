<div class="row">
    <div class="text-right">
        <span class="text-right" onClick={{action "changeSortType"}}> {{inline-svg "/svg/sort.svg" class="small-icon"}} </span>
        {{input type="text" placeholder="Enter Rule name and hit Enter" class="search-box" enter=(action "searchRules")}}
        <button class="button primary-button" onClick={{action "createRule"}}> Add New Rule </button>
    </div>
    <table name="rulesList" class="rules-table">
        <thead>
            <tr>
                <th> Name </th>
                <th> Rules JSON </th>
            </tr>
        </thead>
        <tbody>
            {{#each model as |rule|}}
                <tr>
                    <td> {{rule.name}} </td>
                    <td>
                        {{rule.data}}
                        <span onClick={{action "goToEdit" rule.id}}>
                            {{inline-svg "/svg/edit.svg" class="edit-icon"}}
                        </span>
                        <span onClick={{action "delete" rule.id}}>
                            {{inline-svg "/svg/delete.svg" class="edit-icon"}}
                        </span>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="pagination text-right">
        <span onClick={{action 'loadPreviousPage'}} class="{{if isFirstPage "disabled"}}">
            {{inline-svg "/svg/left-arrow.svg" class="small-icon"}}
        </span>
        <span onClick={{action 'loadNextPage'}} class="{{if isLastPage "disabled"}}">
            {{inline-svg "/svg/left-arrow.svg" class="small-icon right-arrow"}}
        </span>
    </div>
    <div class="footer text-center">
        <a href="https://github.com/pragatheeswarans/ruleset-demo" target="_blank">
            {{inline-svg "/svg/github.svg" class="medium-icon"}}
        </a>
        <div>
            Icons downloaded from <a href="https://www.flaticon.com/" target="_blank" rel="no-opener no-referer"> Flat Icons </a>
        </div>
    </div>
</div>
